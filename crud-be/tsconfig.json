{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@backend/auth": [
        "libs/auth/src"
      ],
      "@backend/auth/*": [
        "libs/auth/src/*"
      ],

      "@backend/users": [
        "libs/users/src"
      ],
      "@backend/users/*": [
        "libs/users/src/*"
      ],

      "@backend/projects": [
        "libs/projects/src"
      ],
      "@backend/projects/*": [
        "libs/projects/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}