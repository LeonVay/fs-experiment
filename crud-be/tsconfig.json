{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@backend/auth": [
        "libs/auth/src/index.ts"
      ],

      "@backend/users": [
        "libs/users/src/index.ts"
      ],


      "@backend/projects": [
        "libs/projects/src/index.ts"
      ],

      "@backend/impacts": [
        "libs/impacts/src/index.ts"
      ],

      "@backend/attack-type": [
        "libs/attack-type/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}